<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView

        android:id="@+id/item_xianxia_image"
        android:layout_width="100dp"
        android:layout_height="65dp" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_xianxia_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_xianxia_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_xianxia_Title"
            android:layout_marginTop="5dp"
            android:text="正在报名" />

        <TextView
            android:id="@+id/item_xianxia_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_xianxia_start"
            android:layout_marginTop="5dp"
            android:text="2017-4-26 13:30" />
    </RelativeLayout>

</LinearLayout>