<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_zhaoren_author_Head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <TextView
        android:id="@+id/item_zhaoren_author_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_zhaoren_author_Head"
        android:text="啦啦啦"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_zhaoren_author_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_zhaoren_author_Name"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_zhaoren_author_Head"
        android:text="万州"
        android:textSize="18sp" />

    <LinearLayout
        android:divider="@drawable/lain"
        android:showDividers="middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_zhaoren_author_address"
        android:layout_toRightOf="@id/item_zhaoren_author_Head">
        <TextView
            android:layout_marginRight="10sp"
            android:textSize="18sp"
            android:text="积分 828"
            android:id="@+id/item_zhaoren_author_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginRight="10sp"
            android:textSize="18sp"
            android:text="关注 163"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_zhaoren_author_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="18sp"
            android:text="粉丝 4296"
            android:layout_marginLeft="10dp"
            android:id="@+id/item_zhaoren_author_fensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>